# Template Service Configuration
# Copy this file to .env and update values as needed

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=60s

# Database Configuration (uncomment and configure as needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/template_db
# DATABASE_MAX_CONNECTIONS=10
# DATABASE_CONNECTION_TIMEOUT=30s

#SERVICE_HOME=/Users/$(whoami)/.ufm

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Tracing Configuration
TRACING_ENABLED=true
TRACING_JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACING_SERVICE_NAME=template-service

# Authentication Configuration (uncomment and configure as needed)
# JWT_SECRET=your-jwt-secret-key
# JWT_EXPIRATION=24h

# Multi-tenant Configuration (uncomment if needed)
# MULTI_TENANT_ENABLED=false
# DEFAULT_TENANT=default